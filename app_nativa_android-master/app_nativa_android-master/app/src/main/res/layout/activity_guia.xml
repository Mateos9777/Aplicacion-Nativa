<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#716C6B"
    tools:context=".Guia">

    <Button
        android:id="@+id/btnEquipamiento"
        android:layout_width="142dp"
        android:layout_height="78dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FFFFFF"
        android:text="Prepara tu Equipamiento"
        android:textColor="#04012D"
        app:layout_constraintBottom_toTopOf="@+id/btnMapas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/btnTips"
        android:layout_width="157dp"
        android:layout_height="59dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#FFFFFF"
        android:text="Tips"
        android:textColor="#04012D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <Button
        android:id="@+id/btnMapas"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#FFFFFF"
        android:text="Mapas"
        android:textColor="#04012D"
        app:layout_constraintBottom_toTopOf="@+id/btnTips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,TextContrastCheck" />

    <ImageView
        android:id="@+id/imgLogo3"
        android:layout_width="267dp"
        android:layout_height="216dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/btnEquipamiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_csgo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtmascotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con esta guia llegaras a global"
        app:layout_constraintBottom_toTopOf="@+id/btnEquipamiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

</androidx.constraintlayout.widget.ConstraintLayout>